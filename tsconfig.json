{
    "compilerOptions": {
      /* Base Options: */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "verbatimModuleSyntax": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",

      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,

      /* Transpiling with TypeScript: */
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "sourceMap": true,

      /* The code doesn't run in the DOM: */
      "lib": ["es2022"],
    },
    "esModuleInterop": true,
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }